---
import Layout from '../../layouts/Layout.astro';
import { sanityClient } from '../../lib/sanity';

// Fetch all categories with post counts
const categoriesWithCounts = await sanityClient.fetch(`
  *[_type == "category"] | order(title) {
    _id,
    title,
    slug,
    description,
    icon,
    "postCount": count(*[_type == "post" && references(^._id)])
  }
`);
---

<Layout title="All Categories - Relocation Quest">
  <main class="min-h-screen bg-gray-50">
    <!-- Header -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-12">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <h1 class="text-4xl font-bold text-blue-900 mb-4">
            Browse by Category
          </h1>
          <p class="text-xl text-gray-700">
            Explore our comprehensive guides organised by topic
          </p>
        </div>
      </div>
    </section>

    <!-- Categories Grid -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6 max-w-5xl mx-auto">
          {categoriesWithCounts.map(category => (
            <a 
              href={`/categories/${category.slug.current}/`}
              class="block bg-white rounded-lg p-6 shadow hover:shadow-lg transition-shadow"
            >
              <div class="text-center">
                <span class="text-4xl mb-4 block">{category.icon}</span>
                <h2 class="text-xl font-bold text-gray-800 mb-2">
                  {category.title}
                </h2>
                {category.description && (
                  <p class="text-gray-600 text-sm mb-3">
                    {category.description}
                  </p>
                )}
                <span class="text-sm text-blue-600 font-semibold">
                  {category.postCount} {category.postCount === 1 ? 'article' : 'articles'}
                </span>
              </div>
            </a>
          ))}
        </div>
        
        {categoriesWithCounts.length === 0 && (
          <div class="text-center py-12">
            <p class="text-gray-600">No categories found.</p>
          </div>
        )}
      </div>
    </section>
  </main>
</Layout>
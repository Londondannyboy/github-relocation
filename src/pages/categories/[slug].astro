---
import Layout from '../../layouts/Layout.astro';
import { sanityClient } from '../../lib/sanity';
import { getFeaturedImageUrl } from '../../lib/imageUtils.js';

export async function getStaticPaths() {
  const categories = await sanityClient.fetch(
    `*[_type == "category"] { slug }`
  );
  return categories.map(category => ({
    params: { slug: category.slug.current }
  }));
}

const { slug } = Astro.params;

// Fetch category details
const category = await sanityClient.fetch(
  `*[_type == "category" && slug.current == $slug][0] {
    _id,
    title,
    slug,
    description,
    icon
  }`,
  { slug }
);

// Fetch posts in this category
const posts = await sanityClient.fetch(
  `*[_type == "post" && references($categoryId)] | order(publishedAt desc) {
    _id,
    title,
    slug,
    excerpt,
    publishedAt,
    featuredImage {
      asset-> { url },
      alt
    },
    categories[]-> {
      title,
      icon
    },
    searchVolume,
    cpc
  }`,
  { categoryId: category._id }
);

if (!category) {
  return Astro.redirect('/404');
}

const pageTitle = `${category.title} - Relocation Quest`;
const pageDescription = category.description || `Browse all ${category.title.toLowerCase()} guides and articles`;
---

<Layout title={pageTitle} description={pageDescription}>
  <main class="min-h-screen bg-gray-50">
    <!-- Category Header -->
    <section class="bg-gradient-to-br from-blue-50 to-indigo-100 py-12">
      <div class="container mx-auto px-4">
        <div class="max-w-4xl mx-auto text-center">
          <span class="text-5xl mb-4 block">{category.icon}</span>
          <h1 class="text-4xl font-bold text-blue-900 mb-4">
            {category.title}
          </h1>
          {category.description && (
            <p class="text-xl text-gray-700">
              {category.description}
            </p>
          )}
        </div>
      </div>
    </section>

    <!-- Posts Grid -->
    <section class="py-12">
      <div class="container mx-auto px-4">
        {posts.length > 0 ? (
          <>
            <p class="text-center text-gray-600 mb-8">
              {posts.length} {posts.length === 1 ? 'article' : 'articles'} in this category
            </p>
            <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8 max-w-6xl mx-auto">
              {posts.map(post => (
                <article class="bg-white rounded-lg shadow hover:shadow-lg transition-shadow overflow-hidden">
                  {post.featuredImage?.asset?.url && (
                    <a href={`/posts/${post.slug.current}`}>
                      <img 
                        src={getFeaturedImageUrl(post.featuredImage.asset.url)} 
                        alt={post.featuredImage.alt || post.title}
                        class="w-full h-48 object-cover"
                      />
                    </a>
                  )}
                  <div class="p-6">
                    <h2 class="text-xl font-bold mb-2">
                      <a href={`/posts/${post.slug.current}`} class="text-gray-800 hover:text-blue-600">
                        {post.title}
                      </a>
                    </h2>
                    {post.excerpt && (
                      <p class="text-gray-600 text-sm mb-4 line-clamp-3">{post.excerpt}</p>
                    )}
                    <div class="flex justify-between items-center text-sm text-gray-500">
                      <time datetime={post.publishedAt}>
                        {new Date(post.publishedAt).toLocaleDateString('en-GB')}
                      </time>
                      {post.searchVolume && (
                        <span>{post.searchVolume.toLocaleString()} searches/mo</span>
                      )}
                    </div>
                  </div>
                </article>
              ))}
            </div>
          </>
        ) : (
          <div class="text-center py-12 max-w-2xl mx-auto">
            <p class="text-gray-600 mb-4 text-lg">
              No articles in this category yet.
            </p>
            <p class="text-gray-500">
              We're working on comprehensive guides for {category.title.toLowerCase()}. Check back soon!
            </p>
            <a href="/posts" class="inline-block mt-6 bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 transition-colors">
              Browse All Articles
            </a>
          </div>
        )}
      </div>
    </section>

    <!-- Back Navigation -->
    <section class="py-8 border-t">
      <div class="container mx-auto px-4 text-center">
        <a href="/" class="text-blue-600 hover:text-blue-700 font-semibold">
          ‚Üê Back to Home
        </a>
      </div>
    </section>
  </main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>
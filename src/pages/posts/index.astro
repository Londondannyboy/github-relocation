---
import Layout from '../../layouts/Layout.astro';
import { sanityClient } from '../../lib/sanity';

// Fetch all posts from Sanity
const posts = await sanityClient.fetch(`
  *[_type == "post"] | order(publishedAt desc) {
    _id,
    title,
    slug,
    excerpt,
    publishedAt,
    featuredImage {
      asset-> {
        url
      },
      alt
    },
    category-> {
      title,
      slug
    },
    searchVolume,
    cpc
  }
`);
---

<Layout title="All Posts - Relocation Quest">
  <main class="container mx-auto px-4 py-8 max-w-6xl">
    <h1 class="text-4xl font-bold mb-8">All Articles</h1>
    
    {posts.length === 0 ? (
      <p class="text-gray-600">No posts found. Check your Sanity connection.</p>
    ) : (
      <div class="grid gap-8 md:grid-cols-2 lg:grid-cols-3">
        {posts.map((post) => (
          <article class="border rounded-lg overflow-hidden shadow-lg hover:shadow-xl transition-shadow">
            {post.featuredImage?.asset?.url && (
              <img 
                src={post.featuredImage.asset.url} 
                alt={post.featuredImage.alt || post.title}
                class="w-full h-48 object-cover"
              />
            )}
            <div class="p-6">
              {post.category && (
                <span class="text-sm text-blue-600 font-semibold">
                  {post.category.title}
                </span>
              )}
              <h2 class="text-xl font-bold mt-2 mb-3">
                <a href={`/posts/${post.slug.current}`} class="hover:text-blue-600">
                  {post.title}
                </a>
              </h2>
              {post.excerpt && (
                <p class="text-gray-600 mb-4 line-clamp-3">{post.excerpt}</p>
              )}
              <div class="flex justify-between items-center text-sm text-gray-500">
                <time datetime={post.publishedAt}>
                  {new Date(post.publishedAt).toLocaleDateString()}
                </time>
                {post.searchVolume && (
                  <span>{post.searchVolume} searches/mo</span>
                )}
              </div>
            </div>
          </article>
        ))}
      </div>
    )}
  </main>
</Layout>

<style>
  .line-clamp-3 {
    display: -webkit-box;
    -webkit-line-clamp: 3;
    -webkit-box-orient: vertical;
    overflow: hidden;
  }
</style>